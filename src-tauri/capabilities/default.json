{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "log_window_*",
    "updater"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "core:window:allow-close",
    "core:window:allow-show",
    "core:window:allow-unminimize",
    "core:window:allow-set-focus",
    "dialog:default",
    "opener:allow-open-path",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-write-image",
    "dialog:allow-open",
    "updater:default",
    "fs:default",
    "process:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    "fs:allow-watch",
    "fs:allow-unwatch",
    "fs:read-all",
    "fs:write-all",
    "fs:read-dirs",
    "fs:write-files",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA" },
        { "path": "$APPDATA/**" },
        { "path": "$APPCONFIG" },
        { "path": "$APPCONFIG/**" },
        { "path": "$APPLOCALDATA" },
        { "path": "$APPLOCALDATA/**" },
        { "path": "$APPCACHE" },
        { "path": "$APPCACHE/**" },
        { "path": "$APPLOG" },
        { "path": "$APPLOG/**" },
        { "path": "$HOME" },
        { "path": "$HOME/**" },
        { "path": "$DESKTOP" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$TEMP" },
        { "path": "$TEMP/**" }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    }
  ]
}